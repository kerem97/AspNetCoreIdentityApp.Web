@model List<UserViewModel>
@{
    ViewData["Title"] = "UserList";
}

<h1>Üye Listesi</h1>




<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
          @*  <th>Roller</th>
            <th>Rol İşlemleri</th>*@
        </tr>
    </thead>


    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
               @* <td>
                    <user-role-names user-id="@item.ID"></user-role-names>
                </td>
                <td>
                    <a asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.ID">Rol ata</a>
                </td>*@
            </tr>
        }







    </tbody>
</table>